         <!--<category android:name="com.orient.cricketscoreboard" />-->
         <!--</intent-filter>-->
         <!--</receiver>-->

        <service android:name=".scoreboard.DataSender"/>
        <service android:name=".scoreboard.ScoreBoard" />
    </application>

</manifest>